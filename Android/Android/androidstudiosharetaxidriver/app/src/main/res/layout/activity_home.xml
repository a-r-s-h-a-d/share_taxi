            android:layout_marginTop="30sp"
            android:background="#FFB90F"
            android:text="MY VEHICLE" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
